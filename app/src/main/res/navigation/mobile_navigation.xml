<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_forecast">

    <fragment
        android:id="@+id/navigation_forecast"
        android:name="com.linglingdr00.weather.ui.forecast.ForecastFragment"
        android:label="@string/title_forecast"
        tools:layout="@layout/fragment_forecast" />

    <fragment
        android:id="@+id/navigation_location"
        android:name="com.linglingdr00.weather.ui.location.LocationFragment"
        android:label="@string/title_location"
        tools:layout="@layout/fragment_location" />

    <fragment
        android:id="@+id/navigation_now"
        android:name="com.linglingdr00.weather.ui.now.NowFragment"
        android:label="@string/title_now"
        tools:layout="@layout/fragment_now" />
</navigation>